<div id="page-wrapper" style="min-height: 650px;">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <h1 class="page-header"> <%= link_to "Lista de datos", data_list_path %>
        </h1>
      </div>
      <!-- /.col-lg-12 -->
    </div>
    <div class="row">
      <div class="col-lg-12">
        <div id="passenger_wrapper">
          <div class="progress" style="display: none;">
            <div class="progress-bar progress-bar-striped active" role="progressbar" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100" style="width:100%">

            </div>
          </div>
        </div>
        <!-- /.records_display -->
        <!-- /.col-lg-12 -->
      </div>
    </div>
    <div id='search-block' class="row">
      <%= form_tag get_records_path, remote: true do %>
          <!-- -->
            <div class="col-sm-12">
              <div class="row">
                <div class="col-sm-3">
                  <p>Bus</p> <small>Placa y Código</small>
                </div>
                <div class="col-sm-3"></div>
                <div class="col-sm-6">
                  <div class="select-style">
                    <%= select_tag "bus_license_plate", options_from_collection_for_select(@buses, "plate_license", "plate_license") %>
                  </div>
                  <br>
                  <div class="select-style">
                    <%= select_tag "bus_id", options_from_collection_for_select(@buses, "id", "id") %>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-sm-12">
              <div class="row">
                <div class="col-sm-12">
                  <p>Fecha</p>
                </div>
                <div class="col-sm-9">
                  <div class="form-group">
                    <div class='input-group date initial-date' id='initial-date'>
                      <input id='initial-date-input' name='initial-date-input' type='text' class="form-control" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-time"></span>
                    </span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <!--div class="col-sm-4">
              <div class="row">
                <div class="col-sm-12">
                  <p>Fecha final</p>
                </div>
                <div class="col-sm-9">
                  <div class="form-group">
                    <div class='input-group date final-date' id='final-date'>
                      <input id='final-date-input' name='final-date-input' type='text' class="form-control" />
                    <span class="input-group-addon">
                        <span class="glyphicon glyphicon-time"></span>
                    </span>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <br>
            <!-- /.col-lg-12 -->
            <div class="col-sm-12">
              <br>
              <%= submit_tag "Ingresar", class: "btn btn-primary btn-block", id: "passenger-quantity" %>
            </div>
      <% end %>
    </div>
    <!-- form_tag -->

  </div>
</div>
<script type="text/javascript" link="crossButton.js"></script>
<script type="text/javascript" link="records.js"></script>
