<div id="page-wrapper" style="min-height: 650px;">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
      <div class="row"></div>
        <%= form_tag records_path, class: "horizontal-form" do |f| %>
          <%= hidden_field_tag :user_id, current_user.id %>
          <div class="form-group">
            <div class="col-md-3">
              <h3>Númeración</h3>
            </div>
            <div class="col-md-5 ">
              <!-- The following options are for number-pad for iOS -->
              <%= number_field_tag :quantity,nil, class:"form-control",min: 0, inputmode: "numeric", pattern: "[0-9]*", title: "Non-negative integral number", placeholder:"Número de pasajeros" %>
            </div>            
          </div>
          <div class="form-group">
            <div class="col-md-3">
              <h3>ID AutoBús</h3>
            </div>
            <div class="col-md-5">
              <%= number_field_tag :bus_id,nil,class: "form-control", min: 0, inputmode: "numeric", pattern: "[0-9]*", title: "Non-negative integral number", placeholder: "ID del Autobús" %>
            </div>
          </div>
          <div class="form-group">
            <%= flash_records(flash) %>
            <%= submit_tag 'Registro', class: "col-xs-offset-1 col-xs-4 pull-right btn-lg btn-primary" %>
          
        <% end %>
      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>