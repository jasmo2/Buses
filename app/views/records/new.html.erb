<%= render partial: "layouts/header" %>
<div id="page-wrapper" style="min-height: 650px;">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
      <div class="row"></div>
        <%= form_for @record, html:{class: "horizontal-form"} do |f| %>
          <div class="form-group">
            <div class="col-md-3">
              <h3>Númeración</h3>
            </div>
            <div class="col-md-5 ">
              <%= f.number_field :quantity, class:"form-control", placeholder:"Número de pasajeros" %>
            </div>            
          </div>
          <div class="form-group">
            <div class="col-md-3">
              <h3>ID AutoBús</h3>
            </div>
            <div class="col-md-5">
              <%= number_field_tag :bus_id,nil,class: "form-control", placeholder: "ID del Autobús" %>
            </div>
          </div>
          <div class="form-group">
            <%= flash_records(flash) %>
            <%= f.submit 'Registro', class: "col-xs-offset-1 col-xs-4 pull-right btn-lg btn-primary" %>
          
        <% end %>
      </div>
      <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
  </div>
  <!-- /.container-fluid -->
</div>