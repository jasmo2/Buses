<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <div class="login-panel panel panel-default">
        <div class="panel-heading">
        <h3 class="panel-title">Checkpoint</h3>
        </div>
        <div class="panel-body">
          <%= form_tag(user_checkpoint_path, class:"checkpoint") do |f| %>
            <fieldset>
              <div class="form-group row">
                <label class="col-xs-6" for="checkpoint_control"><h2>Control :</h2></label>
                <div class="col-xs-6">
                  <%= radio_button_tag :checkpoint,"control",true %>
                </div>
                <!-- class: "form-control" -->
              </div>
              <hr>
              <div class="form-group row">
                <label class="col-xs-6" for="checkpoint_terminal"><h2>Terminal :</h2></label>
                <div class="col-xs-6">
                  <%= radio_button_tag :checkpoint, "terminal" %>
                </div>
                <!-- class: "form-control" -->
              </div>
              <%= submit_tag "Escojer un lugar", class: "btn btn-lg btn-success btn-block" %>
            </fieldset>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
