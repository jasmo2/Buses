<%= simple_form_for @bus, html:  {id: "bus-form", novalidate: 'novalidate'} do |f| %>
  <%= f.error_notification %>

  <%= f.input :id, label: "Numero" %>

  <%= f.input :plate_license, placeholder: 'AAA 345', label: "Placa" %>

  <%= f.input :driver_name, label: "Conductor" %>


  <input type="submit" value="Enviar" name="commit" class="pull-right btn-lg btn-primary ">
<% end %>